<template>
  <view class="container">
    <view class="progress-bar">
      <!-- Progress bar indicating current step -->
      <view class="progress-indicator" :style="{ width: progressWidth }"></view>
    </view>

    <!-- Content area with background image -->
    <view class="background-image" :style="{ backgroundImage: `url(${backgroundImage})` }"></view>

    <!-- Bottom button to proceed to the next step -->
    <button class="continue-button" @click="nextStep">继续</button>
  </view>
</template>

<script>
export default {
  data() {
    return {
      currentStep: 1,
      totalSteps: 2, // Updated to reflect two steps
      backgroundImages: [
        '/static/过渡页b.png',   // Background image path for the first step
        '/static/过渡页.png'     // Background image path for the second step
      ],
      username: ''  // To store the username passed from the previous page
    };
  },
  computed: {
    progressWidth() {
      return `${(this.currentStep / this.totalSteps) * 100}%`; // Calculate the width of the progress bar
    },
    backgroundImage() {
      return this.backgroundImages[this.currentStep - 1]; // Select the background image based on the current step
    },
  },
  methods: {
    nextStep() {
      if (this.currentStep < this.totalSteps) {
        this.currentStep += 1; // Switch to the next step
      } else {
        // After completing all steps, navigate to the target page and pass the username
        uni.navigateTo({
          url: `/pages/preference/preference?username=${this.username}` // Update with the target page path and pass the username
        });
      }
    },
  },
  onLoad(options) {
    // Retrieve URL parameters
    if (options.username) {
      this.username = options.username;  // Store the passed username
    }
  }
};
</script>

